<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ItemActivity"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="100"
    android:background="@color/colorPrimary"
    >


    <ImageView
        android:id="@+id/productIndividualView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_weight="40.0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="60.0"
        >

        <TextView
            android:id="@+id/productIndividualNameView"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="60dp"
            android:backgroundTint="@color/colorPrimary"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="42sp"/>

        <TextView
            android:id="@+id/productIndividualPriceView"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/colorPrimary"
            android:text="Price"
            android:textColor="#000000"
            android:textSize="36sp" />

        <TextView
            android:id="@+id/productIndividualUserName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:backgroundTint="@color/colorPrimary"
            android:text="Posted by user: "
            android:textColor="#000000"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/productIndividualUserPhone"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:backgroundTint="@color/colorPrimary"
            android:text="Contact phone: "
            android:textColor="#000000"
            android:textSize="28sp" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/productIndividualNotify"
            android:text="Notify Interest"
            android:layout_marginTop="20dp"
            android:textSize="22dp"
            android:textAllCaps="false"
            android:background="@color/design_default_color_secondary"
            />

    </LinearLayout>
</LinearLayout>